@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Modify Customer";
}

@model Prac3_MVC.Models.Customer
<div class="form">
    @using (Html.BeginForm())
    {
        <div class="input_block">
            <p class="input_label">Id Покупателя</p> @Html.TextBoxFor(model => model.Id, new { @type = "number" })
        </div>
        <div class="input_block">
            <p class="input_label">Имя</p> @Html.TextBoxFor(model => model.Name)
        </div>
        <div class="input_block">
            <p class="input_label">Возраст</p> @Html.TextBoxFor(model => model.Age, new {@type = "number"})
        </div>
        <div class="input_block">
            <p class="input_label">Номер телефона</p> @Html.TextBoxFor(model => model.PhoneNumber, new { @placeholder = "+x-xxx-xxx-xx-xx" })
        </div>
        <input type="submit" value="Изменить" class="submit"/>
    }
</div>
