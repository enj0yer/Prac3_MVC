@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Add Customer";
}

@model IEnumerable<Prac3_MVC.Models.CustomerWithOrders>
<div>
    <h2>Список всех заказчиков с заказами</h2>

    @if(Model.Count() == 0)
    {
        <h3>Заказчиков не найдено</h3>
    }
    else
    {
        <table>
            <tr>
                <td>Id</td>
                <td>Имя</td>
                <td>Заказы</td>
            </tr>
            @foreach (Prac3_MVC.Models.CustomerWithOrders customerWithOrders in Model)
            {
                <tr>
                    <td>@customerWithOrders.Customer.Id</td>
                    <td>@customerWithOrders.Customer.Name</td>
                    <td>@Html.Partial("ListOfOrders", customerWithOrders.Orders)</td>
                </tr>
            }
        </table>
    }
</div>
