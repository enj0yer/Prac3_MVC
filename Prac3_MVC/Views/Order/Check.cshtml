@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Check Order";
}

@model IEnumerable<Prac3_MVC.Models.Order>
<div class="form">
    <h2>Все заказы</h2>

    @if (Model.Count() == 0)
    {
        <h3>Заказов не найдено</h3>
    }
    else
    {
        <table>
            <tr>
                <td>Id</td>
                <td>Название</td>
                <td>Id заказчика</td>
                <td>Цена</td>
            </tr>

            @foreach (Prac3_MVC.Models.Order order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.Name</td>
                    <td>@order.CustomerId</td>
                    <td>@order.Price</td>
                </tr>
            }
        </table>
    }
</div>